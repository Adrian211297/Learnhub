<%- include('partials/header') %>

<section class="container" style="padding: 3rem 0;">
  <h1>Frequently Asked Questions</h1>
  <p style="font-size: 1.1rem;">Find quick answers to common queries below.</p>

  <% faq.forEach(item => { %>
    <div class="faq-item">
      <button class="faq-question"><span><%= item.question %></span></button>
      <div class="faq-answer">
        <p><%= item.answer %></p>
      </div>
    </div>
  <% }); %>
</section>

<%- include('partials/footer') %>
<script src="/js/faq.js"></script>