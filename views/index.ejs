<%- include('partials/header') %>

<section class="container" style="padding: 3rem 0;">

  <!-- School introduction -->
  <div class="university-intro">
    <h1>Welcome to LearnHub University</h1>
    <p>
      LearnHub is a modern and dynamic e-learning platform, offering a wide range of courses, expert instructors, and interactive live sessions.
      Join our vibrant community of learners and prepare yourself for future career challenges. Empower your learning journey today!
    </p>
  </div>

  <!-- Live sessions -->
  <section class="container" style="padding: 3rem 0;">
    <h1>Upcoming Live Sessions</h1>
  
    <% if (liveSessions.length === 0) { %>
      <p>No sessions available at the moment.</p>
    <% } else { %>
      <div class="course-grid">
        <% liveSessions.forEach(session => { %>
          <div class="card">
            <h3><%= session.title %></h3>
            <p><strong>Date:</strong> <%= session.date %></p>
            <p><strong>Time:</strong> <%= session.time %></p>
            <p><strong>Instructor:</strong> <%= session.instructor %></p>
            <% if (session.webex_code) { %>
              <p><strong>Webex Room:</strong> <%= session.webex_code %></p>
            <p><%= session.description %></p>
            
            <% } %>
          </div>
        <% }) %>
      </div>
    <% } %>
  </section>

</section>

<%- include('partials/footer') %>