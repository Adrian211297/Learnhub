<%- include('partials/header') %>
<section class="container" style="padding: 3rem 0;">
  <h1>Our Courses</h1>
    <div style="margin: 2rem 0;">
    
    </div>
    <div class="course-grid">
      <% courses.forEach(course => { %>
        <div class="card course-card" style="background: linear-gradient(to right, hsla(0, 0%, 100%, 0.59), hsla(203, 92%, 55%, 0.404)), url('/images/courses/<%= course.image %>')">
          <div style="background: rgba(255, 255, 255, 0.6); padding: 1rem; border-radius: 10px;">
            <h3><%= course.name %></h3>
            <p><strong>Instructor:</strong> <%= course.instructor %></p>
            <p><strong>Duration:</strong> <%= course.duration %></p>
            <p><%= course.description.length > 150 ? course.description.substring(0, 150) + '...' : course.description %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </section>
<%- include('partials/footer') %>