<%- include('partials/header') %>
<section class="container" style="padding: 3rem 0;">
  <h1>Meet Our Expert Instructors</h1>
  <p style="font-size: 1.1rem;">Learn from professionals with years of experience in their fields.</p>

  <% instructors.forEach(instructor => { %>
    <div class="card instructor">
      <img src="/images/Instructors/<%= instructor.image %>" alt="<%= instructor.name %>" class="instructor-img">
      <div>
        <h2><%= instructor.name %></h2>
        <p><strong>Specialization:</strong> <%= instructor.specialization %></p>
        <p><strong>Experience:</strong> <%= instructor.experience %></p>
        <p><%= instructor.bio %></p>
        <p><strong>Contact:</strong> <a href="mailto:<%= instructor.email %>"><%= instructor.email %></a></p>
      </div>
    </div>
  <% }); %>
</section>
<%- include('partials/footer') %>